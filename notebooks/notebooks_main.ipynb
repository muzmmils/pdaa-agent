# Cell 2: Initialize and Run
from src.orchestrator import PDAAOrchestrator

# Create orchestrator
orchestrator = PDAAOrchestrator(patients_file="../data/patients.json")

# Run 7-day simulation
results = orchestrator.run_simulation(days=7)

# Cell 3: Export and Analyze Results
orchestrator.export_results(results, "pdaa_simulation_results.json")

# Display logs
import pandas as pd
logs_df = pd.DataFrame(orchestrator.get_logs())
print(logs_df)

# Cell 4: Visualize Results
import matplotlib.pyplot as plt

# Plot adherence trends
for patient_id, patient_data in results["patient_results"].items():
    scores = [r["analysis"]["adherence_score"]["total_score"] 
              for r in patient_data["daily_results"]]
    plt.plot(range(1, len(scores) + 1), scores, 
             label=patient_data["patient_name"], marker='o')

plt.xlabel("Day")
plt.ylabel("Adherence Score")
plt.title("Patient Adherence Trends Over 7 Days")
plt.legend(bbox_to_anchor=(1.05, 1), loc='upper left')
plt.grid(True, alpha=0.3)
plt.tight_layout()
plt. show()